<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Blogs</title>
    <style>
      /* Global Styles */
      body {
        font-family: "Roboto", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8fafc;
        color: #444;
      }
      .container {
        width: 90%;
        max-width: 1200px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
      }
      .container:hover {
        transform: translateY(-5px);
      }
      h1 {
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
        letter-spacing: 1px;
      }

      /* Table Styling */
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
      }
      table th,
      table td {
        padding: 15px;
        text-align: left;
        border: 1px solid #e0e0e0;
        font-size: 1.1rem;
      }
      table th {
        background-color: #4caf50; /* Green for headers */
        color: #fff;
        font-weight: bold;
        border-radius: 8px 8px 0 0;
      }
      table td {
        background-color: #f9f9f9;
      }
      table tr:hover {
        background-color: #f1f1f1;
      }

      /* Button Styling */
      .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 6px;
        text-align: center;
        cursor: pointer;
        display: inline-block;
        transition: all 0.3s ease-in-out;
        font-weight: 500;
        text-transform: uppercase;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }
      .btn-add {
        background-color: #009688; /* Teal for Add button */
        color: white;
        margin-bottom: 20px;
      }
      .btn-add:hover {
        background-color: #00796b; /* Darker teal on hover */
      }
      .btn-edit {
        background-color: #3f51b5; /* Blue for Edit button */
        color: white;
      }
      .btn-edit:hover {
        background-color: #303f9f; /* Darker blue on hover */
      }
      .btn-delete {
        background-color: #f44336; /* Red for Delete button */
        color: white;
      }
      .btn-delete:hover {
        background-color: #d32f2f; /* Darker red on hover */
      }
      .btn-back {
        background-color: #607d8b; /* Grey for Back button */
        color: white;
        display: inline-block;
        text-align: center;
        padding: 12px 24px;
        font-size: 1.1rem;
        font-weight: 500;
        margin-top: 30px;
        border-radius: 6px;
        text-transform: uppercase;
      }

      .btn-back:hover {
        background-color: #455a64; /* Darker grey on hover */
      }

      /* Responsive Styles */
      @media (max-width: 768px) {
        .container {
          padding: 20px;
          margin: 10px;
        }
        h1 {
          font-size: 1.8rem;
        }
        table th,
        table td {
          padding: 12px;
        }
        .btn {
          font-size: 0.9rem;
          padding: 8px 16px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Manage Blogs</h1>
      <a href="/add-blog" class="btn btn-add">Add New Blog</a>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% blogs.forEach(blog => { %>
          <tr>
            <td><%= blog.title %></td>
            <td><%= blog.username %></td>
            <td><%= blog.status %></td>
            <td><%= blog.createdAt.toDateString() %></td>
            <td>
              <a href="/edit-blog/<%= blog.id %>" class="btn btn-edit">Edit</a>
              <form
                action="/delete-blog/<%= blog.id %>"
                style="display: inline"
              >
                <button type="submit" class="btn btn-delete">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <a href="/dashboard" class="btn btn-back">Back to Dashboard</a>
    </div>
  </body>
</html>
